{
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "python.autoComplete.extraPaths": [
        "${workspaceFolder}/src"
    ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": false,
    "python.linting.pydocstyleEnabled": false,
    "python.linting.banditEnabled": false,
    "python.linting.pylamaEnabled": false,
    "python.linting.pylintArgs": [
        "whatever plugins you want to use"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "88"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "${workspaceFolder}/tests"
    ],
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.envFile": "${workspaceFolder}/.env",
    "python.terminal.activateEnvironment": true,
    "python.analysis.indexing": true,
    "python.analysis.indexingDelay": 5000,
    "python.analysis.useLibraryCodeForTypes": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.logLevel": "Error",
    "python.analysis.cacheFolder": "${workspaceFolder}/.vscode/.python_analysis_cache",
    "python.analysis.downloadChannel": "stable",
    "python.analysis.autoSearchPaths": true,
    "python.analysis.useTypeshed": true,
    "python.analysis.inlayHints.variableTypes.enabled": true,
    "python.analysis.inlayHints.functionReturnTypes.enabled": true,
    "python.analysis.inlayHints.functionParameterTypes.enabled": true,
    "python.analysis.inlayHints.variableTypes.showInStringLiteral": true,
    "python.analysis.inlayHints.functionReturnTypes.showInStringLiteral": true,
    "python.analysis.inlayHints.functionParameterTypes.showInStringLiteral": true,
    "python.analysis.inlayHints.variableTypes.showInComments": true,
    "python.analysis.inlayHints.functionReturnTypes.showInComments": true,
    "python.analysis.inlayHints.functionParameterTypes.showInComments": true,
    "python.analysis.inlayHints.variableTypes.showInDocstring": true,
    "python.analysis.inlayHints.functionReturnTypes.showInDocstring": true,
    "python.analysis.inlayHints.functionParameterTypes.showInDocstring": true,
    "python.analysis.inlayHints.variableTypes.showInHover": true,
    "python.analysis.inlayHints.functionReturnTypes.showInHover": true,
    "python.analysis.inlayHints.functionParameterTypes.showInHover": true,
    "python.analysis.inlayHints.variableTypes.showInSignatureHelp": true,
    "python.analysis.inlayHints.functionReturnTypes.showInSignatureHelp": true,
    "python.analysis.inlayHints.functionParameterTypes.showInSignatureHelp": true,
    "python.analysis.inlayHints.variableTypes.showInQuickInfo": true,
    "python.analysis.inlayHints.functionReturnTypes.showInQuickInfo": true,
    "python.analysis.inlayHints.functionParameterTypes.showInQuickInfo": true,
    "python.analysis.inlayHints.variableTypes.showInParameterHints": true,
    "python.analysis.inlayHints.functionReturnTypes.showInParameterHints": true,
    "python.analysis.inlayHints.functionParameterTypes.showInParameterHints": true,
    "python.analysis.inlayHints.variableTypes.showInCodeLens": true,
    "python.analysis.inlayHints.functionReturnTypes.showInCodeLens": true,
    "python.analysis.inlayHints.functionParameterTypes.showInCodeLens": true,
    "python.analysis.inlayHints.variableTypes.showInCodeActions": true,
    "python.analysis.inlayHints.functionReturnTypes.showInCodeActions": true,
    "python.analysis.inlayHints.functionParameterTypes.showInCodeActions": true,
    "python.analysis.inlayHints.variableTypes.showInCodeActionsOnSave": true,
    "python.analysis.inlayHints.functionReturnTypes.showInCodeActionsOnSave": true,
    "python.analysis.inlayHints.functionParameterTypes.showInCodeActionsOnSave": true
}
